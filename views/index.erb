<h1>Products</h1>
<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Status</th>
    </tr>
    <% @products.each do |product| %>
        <tr>
            <td><%= product['id'] %></td>
            <td><%= product['name'] %></td>
            <td><%= product['price'] %></td>
            <td><%= product['status'] %></td>
        </tr>
    <% end %>
</table>


